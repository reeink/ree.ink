---
import BaseLayout from "../BaseLayout.astro";
import MetaInfo from "@/components/MetaInfo.astro";
import { PostSchema } from "@/scripts/posts";

interface Props {
  frontmatter: any;
}

const { frontmatter } = Astro.props as Props;
const data = PostSchema.parse(frontmatter);
---

<BaseLayout>
  <!-- header meta info -->
  <MetaInfo slot="head" />

  <!-- main content -->
  <main class="center-content" my-20>
    <article font-font>
      <h1 class="title" text-3xl font-bold mb-5>
        {data?.title}
      </h1>
      <slot />
    </article>
  </main>
</BaseLayout>
