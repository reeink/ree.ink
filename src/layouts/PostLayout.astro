---
import PageGrid from "@/components/PageGrid.astro";
import HtmlBase from "./HtmlBase.astro";
import ArticleStyle from "@/components/post-styles/ArticleStyle.astro";
import { SEO } from "astro-seo";

import config from "@config";

interface Props {
  frontmatter: any;
}

const { frontmatter } = Astro.props as Props;
---

<HtmlBase>
  <SEO slot="head"
    charset={config.base.charset}
    title={frontmatter.title}
    titleTemplate={"%s - " + config.base.title}
    titleDefault={config.base.title}
    description={frontmatter.description}

  />
  <PageGrid>
    <ArticleStyle frontmatter={frontmatter}>
      <slot />
    </ArticleStyle>
  </PageGrid>
</HtmlBase>
